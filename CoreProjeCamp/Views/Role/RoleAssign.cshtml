@model List<Entity.ViewModel.RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h1>Role Assign</h1>

<form asp-action="RoleAssign" asp-controller="Role">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Yetki Durumu
                </th>
                <th>
                    @ViewBag.error
                    Role Name
                </th>
            </tr>
        </thead>
        <tbody>
            @ViewBag.Deneme
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                    <td>
                        @Model[i].RoleName
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2">
                    <button class="btn btn-primary">Rol Ata</button>
                </td>
            </tr>
        </tbody>
    </table>

</form>
